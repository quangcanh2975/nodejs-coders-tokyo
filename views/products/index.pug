extends ../layouts/common
block content
    h1 Products
    .card-columns
        each product in products
            .card
                img.card-img-top(src='https://staticshop.o2.co.uk/product/images/iphone-x-space-grey-sku-header.png?cb=25dc5afb0412fc40a28aa29d82cb53d0', alt='Products image')
                .card-body
                h5.card-title #{product.name}
                p.card-text
                    | #{product.decription}
                p.card-text
                    small.text-muted #{product.id}
    nav(aria-label='...')
        ul.pagination.justify-content-center
            li.page-item
            if currentPage > 1
                a.page-link(href = '/products?page=' + (currentPage - 1)) Previous
            else    
                a.page-link.disabled(href = '') Previous
            
            if currentPage == pages[0]
                li.page-item.active
                    a.page-link(href='/products?page='+pages[0]) #{pages[0]}
            else
                li.page-item
                    a.page-link(href='/products?page='+pages[0]) #{pages[0]}

            if currentPage == pages[1]
                li.page-item.active
                    a.page-link(href='/products?page='+pages[1]) #{pages[1]}
            else
                li.page-item
                    a.page-link(href='/products?page='+pages[1]) #{pages[1]}

            if currentPage == pages[2]
                li.page-item.active
                    a.page-link(href='/products?page='+pages[2]) #{pages[2]}
            else
                li.page-item
                    a.page-link(href='/products?page='+pages[2]) #{pages[2]}

            li.page-item
            if currentPage < pages[2]
                a.page-link(href='/products?page=' + (currentPage + 1)) Next
            else    
                a.page-link.disabled(href = '') Next
            
