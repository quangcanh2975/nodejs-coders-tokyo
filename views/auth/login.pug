extends ../layouts/common
block content
  h1 Login
  if errors
    each error in errors
      .alert.alert-danger= error
  form.navbar-form.navbar-left(method='POST')
    input(type="hidden" name="_csrf" value=csrfToken)
    .form-group
      input.form-control(type='email', placeholder='Email', name='email', value=values?values.name:'')
      input.form-control(type='text', placeholder='Password', name='password', value=values?values.phone:'')
      button.btn.btn-default() Log in